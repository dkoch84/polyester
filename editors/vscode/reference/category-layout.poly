/page A4 --margin 0 --max-width none

/style {
  body {
    margin: 0;
    padding: 0;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    font-size: 14px;
  }
  .poly-grid {
    align-items: stretch;
  }
  .poly-grid > .poly-region:first-child {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .poly-grid > .poly-region:first-child .poly-code-block pre {
    background: transparent !important;
    margin: 0;
    padding: 0;
  }
  .poly-grid > .poly-region:first-child .poly-code-block code {
    color: #e6e6e6;
    font-size: 13px;
  }
  h1, h2, h3 { margin-top: 0; }
}

/region --bg linear-gradient(135deg,#3b82f6,#06b6d4) --padding 2rem {
  /text "Layout Components" --bold --size 2rem --color white
  /text "Structure and arrange your content" --color rgba(255,255,255,0.8)
}

/grid "280px 1fr" {

  /region --bg #282828 --padding 1rem {
    /code polyester {
      /columns 3 --gap 1rem {
        /card { One }
        /card { Two }
        /card { Three }
      }
    }
  }

  /region --bg #f8fafc --padding 1.5rem {
    ## /columns

    /text "Equal-width columns for side-by-side content" --italic --color #64748b

    /columns 3 --gap 1rem {
      /frame --bg #dbeafe --padding 0.75rem --radius 4px {
        /center { One }
      }
      /frame --bg #dbeafe --padding 0.75rem --radius 4px {
        /center { Two }
      }
      /frame --bg #dbeafe --padding 0.75rem --radius 4px {
        /center { Three }
      }
    }

    /region --bg #eff6ff --padding 0.75rem --radius 8px {
      **Key flags:** `--gap` for spacing between columns
    }
  }

}

/grid "280px 1fr" {

  /region --bg #282828 --padding 1rem {
    /code polyester {
      /grid "1fr 2fr" --gap 1rem {
        /region --bg gray { Sidebar }
        /region --bg blue { Main content }
      }
    }
  }

  /region --bg white --padding 1.5rem {
    ## /grid

    /text "CSS Grid with custom column widths" --italic --color #64748b

    /grid "1fr 2fr" --gap 1rem {
      /frame --bg #e0e7ff --padding 0.75rem --radius 4px {
        Sidebar (1fr)
      }
      /frame --bg #c7d2fe --padding 0.75rem --radius 4px {
        Main content (2fr = twice as wide)
      }
    }

    /region --bg #eff6ff --padding 0.75rem --radius 8px {
      **Key flags:** First arg is column template (e.g., `"1fr 2fr"`, `"200px 1fr"`)
    }
  }

}

/grid "280px 1fr" {

  /region --bg #282828 --padding 1rem {
    /code polyester {
      /region --bg #f0f0f0
        --padding 2rem {
        Styled container
      }
    }
  }

  /region --bg #f8fafc --padding 1.5rem {
    ## /region

    /text "Generic container with background and padding" --italic --color #64748b

    /region --bg #fef3c7 --padding 1.5rem --radius 8px {
      A region is the simplest container. Use it for backgrounds, padding, or grouping content.
    }

    /region --bg #eff6ff --padding 0.75rem --radius 8px {
      **Key flags:** `--bg`, `--padding`, `--margin`, `--width`, `--height`
    }
  }

}

/grid "280px 1fr" {

  /region --bg #282828 --padding 1rem {
    /code polyester {
      /frame --border "2px solid blue"
        --radius 8px
        --padding 1rem {
        Bordered box
      }
    }
  }

  /region --bg white --padding 1.5rem {
    ## /frame

    /text "Box with border, background, and rounded corners" --italic --color #64748b

    /frame --border "2px solid #3b82f6" --radius 8px --padding 1rem --bg #f8fafc {
      A frame is like a region but designed for visible borders. Great for cards, callouts, and highlighted content.
    }

    /region --bg #eff6ff --padding 0.75rem --radius 8px {
      **Key flags:** `--border`, `--radius`, `--bg`, `--padding`
    }
  }

}

/grid "280px 1fr" {

  /region --bg #282828 --padding 1rem {
    /code polyester {
      /center {
        Horizontally centered
      }

      /vcenter --height 200px {
        Centered both ways
      }
    }
  }

  /region --bg #f8fafc --padding 1.5rem {
    ## /center & /vcenter

    /text "Centering content horizontally and vertically" --italic --color #64748b

    /columns 2 --gap 1rem {
      /frame --bg white --padding 1rem --radius 8px --border "1px solid #e2e8f0" {
        /center {
          /text "/center" --bold --color #3b82f6
          Horizontal only
        }
      }
      /frame --bg white --padding 1rem --radius 8px --border "1px solid #e2e8f0" {
        /vcenter --height 80px {
          /text "/vcenter" --bold --color #a855f7
          Both directions
        }
      }
    }

    /region --bg #eff6ff --padding 0.75rem --radius 8px {
      **vcenter flags:** `--height` required for vertical centering
    }
  }

}

/grid "280px 1fr" {

  /region --bg #282828 --padding 1rem {
    /code polyester {
      /page A4 --margin 2cm {
        Document content
      }
    }
  }

  /region --bg white --padding 1.5rem {
    ## /page

    /text "Document setup for page size and margins" --italic --color #64748b

    /frame --bg #f8fafc --padding 1rem --radius 8px {
      | Size | Dimensions |
      |------|------------|
      | A4 | 210 x 297mm |
      | letter | 8.5 x 11in |
      | legal | 8.5 x 14in |
    }

    /region --bg #eff6ff --padding 0.75rem --radius 8px {
      **Key flags:** `--margin`, `--landscape`, `--max-width`
    }
  }

}

/region --bg #1e293b --padding 2rem {
  /center {
    /text "Layout Components Summary" --bold --size 1.25rem --color white
  }

  /columns 3 --gap 1rem {

    /frame --bg #334155 --padding 1rem --radius 8px {
      /text "Containers" --bold --color #3b82f6 --size 0.9rem
      /text "/region" --color white - basic container
      /text "/frame" --color white - bordered box
      /text "/page" --color white - document setup
    }

    /frame --bg #334155 --padding 1rem --radius 8px {
      /text "Multi-column" --bold --color #a855f7 --size 0.9rem
      /text "/columns" --color white - equal widths
      /text "/grid" --color white - custom widths
    }

    /frame --bg #334155 --padding 1rem --radius 8px {
      /text "Centering" --bold --color #10b981 --size 0.9rem
      /text "/center" --color white - horizontal
      /text "/vcenter" --color white - both axes
    }

  }
}
