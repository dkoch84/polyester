{
  "name": "polyester-vscode",
  "displayName": "Polyester",
  "description": "Language support for Polyester documents",
  "version": "0.2.1",
  "publisher": "polyester",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:polyester"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "polyester",
        "aliases": ["Polyester", "poly"],
        "extensions": [".poly"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "polyester",
        "scopeName": "source.polyester",
        "path": "./syntaxes/polyester.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "polyester.buildHtml",
        "title": "Polyester: Build to HTML",
        "icon": "$(file-code)"
      },
      {
        "command": "polyester.buildPdf",
        "title": "Polyester: Build to PDF",
        "icon": "$(file-pdf)"
      },
      {
        "command": "polyester.searchComponents",
        "title": "Polyester: Search Components",
        "icon": "$(search)"
      },
      {
        "command": "polyester.showComponentDocs",
        "title": "Polyester: Show Component Documentation",
        "icon": "$(book)"
      },
      {
        "command": "polyester.showDocsAtCursor",
        "title": "Polyester: Show Docs for Component at Cursor",
        "icon": "$(question)"
      },
      {
        "command": "polyester.refreshDocs",
        "title": "Polyester: Refresh Documentation",
        "icon": "$(refresh)"
      },
      {
        "command": "polyester.openPreview",
        "title": "Polyester: Open Live Preview",
        "icon": "$(open-preview)"
      }
    ],
    "keybindings": [
      {
        "command": "polyester.buildHtml",
        "key": "ctrl+alt+h",
        "mac": "cmd+alt+h",
        "when": "editorLangId == polyester"
      },
      {
        "command": "polyester.buildPdf",
        "key": "ctrl+alt+p",
        "mac": "cmd+alt+p",
        "when": "editorLangId == polyester"
      },
      {
        "command": "polyester.searchComponents",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "editorLangId == polyester"
      },
      {
        "command": "polyester.showDocsAtCursor",
        "key": "ctrl+shift+/",
        "mac": "cmd+shift+/",
        "when": "editorLangId == polyester && editorTextFocus"
      },
      {
        "command": "polyester.openPreview",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "editorLangId == polyester"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "polyester",
          "title": "Polyester",
          "icon": "$(file-code)"
        }
      ]
    },
    "views": {
      "polyester": [
        {
          "id": "polyesterDocs",
          "name": "Components"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "polyesterDocs",
        "contents": "Browse Polyester components by category.\n\nClick a component to view its documentation.\n\n[Search Components](command:polyester.searchComponents)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "polyester.refreshDocs",
          "when": "view == polyesterDocs",
          "group": "navigation"
        },
        {
          "command": "polyester.searchComponents",
          "when": "view == polyesterDocs",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "polyester.showComponentDocs",
          "when": "view == polyesterDocs && viewItem == component",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Polyester",
      "properties": {
        "polyester.lspPath": {
          "type": "string",
          "default": "",
          "description": "Path to poly-lsp executable (if not in PATH)"
        },
        "polyester.cliPath": {
          "type": "string",
          "default": "",
          "description": "Path to poly CLI (dist/cli/index.js). If empty, searches workspace or uses 'poly' from PATH."
        },
        "polyester.defaultTheme": {
          "type": "string",
          "default": "default",
          "description": "Default theme for syntax highlighting in output"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run build-reference",
    "build-reference": "node scripts/build-reference.js",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.7.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
