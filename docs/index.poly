/page A4 --margin 0 --max-width none

/style {
  body {
    margin: 0;
    padding: 0;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  }
  .poly-grid {
    align-items: stretch;
  }
  .poly-grid > .poly-region:first-child {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 0.5rem 0.75rem !important;
  }
  .poly-grid > .poly-region:first-child .poly-code-block {
    margin: 0;
  }
  .poly-grid > .poly-region:first-child .poly-code-block pre {
    background: transparent !important;
    margin: 0;
    padding: 0;
  }
  .poly-grid > .poly-region:first-child .poly-code-block code {
    color: #ebdbb2;
  }
}

/grid "320px 1fr" {

  /region --bg #282828 --padding 1.5rem {
    /code polyester {
      /hero --bg gradient {
        /vcenter --height 90vh {
          /text "Polyester" --bold
          --size 4rem --color white

          /button primary "Get Started"
        }
      }
    }
  }

  /hero --bg gradient {
    /vcenter --height 90vh {
      /text "Polyester" --bold --size 4rem --color white --tracking wide

      /region --padding 1rem {
        A document language that feels like home.

        Markdown simplicity meets programming power.
      }

      /region --padding 2rem {
        /button primary "Get Started"
        /button secondary "View on GitHub"
      }
    }
  }

}

