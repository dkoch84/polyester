  }

  /region --bg #fef3c7 --padding 3rem {

    ## Theming

    Import colorschemes from your terminal. Your documents match your aesthetic.

    /columns 4 --gap 1rem {
      /frame --bg #282828 --padding 1rem --radius 8px {
        /text "Gruvbox" --color #ebdbb2 --size 0.9rem
      }
      /frame --bg #2e3440 --padding 1rem --radius 8px {
        /text "Nord" --color #eceff4 --size 0.9rem
      }
      /frame --bg #1d1f21 --padding 1rem --radius 8px {
        /text "Tomorrow" --color #c5c8c6 --size 0.9rem
      }
      /frame --bg #002b36 --padding 1rem --radius 8px {
        /text "Solarized" --color #839496 --size 0.9rem
      }
    }

    /code bash {
      # Import from your terminal config
      poly theme import ~/.Xresources --name my-theme
      poly theme import ~/.config/kitty/kitty.conf --name kitty
      poly theme import ~/.cache/wal/colors.json --name pywal

      # Build with your theme
      poly build doc.poly --theme my-theme
    }

  }

}

